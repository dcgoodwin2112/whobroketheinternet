---
import { getCollection } from 'astro:content';
import type { CollectionEntry } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date) {
  return new Date(date).toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
  });
}
---

<BaseLayout title={`${post.data.title} - Who Broke The Internet?`} description={post.data.excerpt}>
  <article class="pb-12">
    <header class="mb-12">
      <a
        href="/"
        class="inline-flex items-center gap-2 mb-8 text-neutral-600 dark:text-neutral-400 hover:text-neutral-900 dark:hover:text-neutral-100 transition-colors font-medium"
      >
        <i class="fas fa-arrow-left"></i>
        <span>Back to all posts</span>
      </a>
      <h1 class="text-4xl md:text-5xl font-extrabold mb-6 leading-tight text-neutral-900 dark:text-neutral-50">{post.data.title}</h1>
      <div class="flex items-center gap-4 text-sm text-neutral-600 dark:text-neutral-400 pb-6 border-b border-neutral-200 dark:border-neutral-700">
        <time datetime={post.data.date.toISOString()}>
          {formatDate(post.data.date)}
        </time>
        <span>â€¢</span>
        <span>By {post.data.author}</span>
      </div>
    </header>

    <div class="prose dark:prose-invert mx-auto">
      <Content />
    </div>
  </article>
</BaseLayout>
